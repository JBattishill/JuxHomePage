{% for item in collections.sections %}
  {% if item.data.type === 'features' %}
    <div id="features" class="animatedbg w-full min-h-screen -mt-2 flex flex-col justify-center items-center py-16">
      <div class="self-center text-center w-full sm:w-2/3 xl:w-1/2 px-4 sm:px:0">
        <h2 class="tracking-wide text-gray-50 font-bold text-4xl mb-4">{{ item.data.title }}</h2>
        <div class="font-light text-gray-200 text-xl mb-6">
          {{ item.templateContent | safe }}
        </div> 
      </div>
      <div class="self-center w-full xl:w-4/5 flex flex-col sm:flex-row flex-wrap px-4 xl:px:0">
        {% for item in features %}
          <div class="w-full sm:w-1/2 flex flex-row flex-no-wrap hover:shadow-lg hover:bg-blue-800 hover:bg-opacity-50 px-2 sm:px-4 py-6 sm:py-6">
            <div class="w-1/3 xl:w-1/4">
              <img src="/img/features/{{ item.icon }}" alt="{{ item.title }}" class="w-24 block sm:mx-auto">
            </div>
            <div class="w-2/3 xl:w-3/4">
              <h3 class="tracking-wide text-gray-50 font-bold text-3xl uppercase mb-2">{{ item.title }}</h3>
              <div class="font-light text-gray-200 text-lg">
                {{ item.content | markdown | safe }}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
      <div class="flex flex-row w-full justify-center">
      <a class="mt-24 px-10 py-2 text-gray-800 bg-pink-950 rounded-lg shadow-md text-lg hover:bg-gray-800 hover:text-gray-50" href="#peek">See our latest work</a>
      </div>
    </div>
  {% endif %}
{% endfor %}